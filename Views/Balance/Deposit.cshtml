@model Online_Shop_Final_Project_ITStep.Models.VM.DepositMoneyVM;

@using Microsoft.AspNetCore.Identity;
@using Online_Shop_Final_Project_ITStep.Models.Entities;
@inject UserManager<Users> UserManager

@{
    var isos = Enum.GetValues(typeof(ISOs)).Cast<ISOs>();
}

<h2>Money Deposit</h2>

<form asp-action="Deposit" method="post">
    <div class="mb-3 d-flex gap-3">
        <div class="flex-grow-1">
            <label asp-for="Amount" class="form-label">Amount</label>
            <input asp-for="Amount" type="number" step="0.01" class="form-control" placeholder="Enter product price">
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>
        <div class="flex-grow-1">
            <label asp-for="ISO" class="form-label">Currency</label>
            <select asp-for="ISO" class="form-select">
                @foreach (var obj in isos)
                {
                    <option value="@obj">@obj</option>
                }                
            </select>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Deposit Money</button>
</form>
