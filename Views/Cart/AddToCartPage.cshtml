<div class="card text-center p-4 shadow">
   <form method="post" asp-controller="Cart" asp-action="AddToCart">
        <h2 class="card-title">@Model.Name</h2>
        <p class="card-text">@Model.Description</p>
        <p class="fw-bold">Price: @Model.Price @Model.ISO</p>
        <p class="text-muted">Available Quantity: @Model.Stock</p>
        <div class="mb-3">            
            <input type="number" name="quantity" class="form-control" aria-describedby="emailHelp" placeholder="Desired Quantity">
            <input hidden name="productId" value="@Model.ProductId" />
        </div>
        <button type="submit" class="btn btn-primary">Add to Cart</button>
   </form>
</div>
