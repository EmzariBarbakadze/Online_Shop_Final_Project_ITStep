@using Microsoft.AspNetCore.Identity;

@model Online_Shop_Final_Project_ITStep.Models.VM.AddProductVM;

@{
    ViewData["Title"] = "Add Product";

    var isos = Enum.GetValues(typeof(ISOs)).Cast<ISOs>();

    var categories = Model.categories;
}

<div class="container">
    <h2 class="mb-4">Add New Product</h2>

    <form asp-action="AddProduct" method="post">
        <div class="mb-3">
            <label asp-for="Name" class="form-label">Product Name</label>
            <input asp-for="Name" class="form-control" placeholder="Enter product name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3 d-flex gap-3">
            <div class="flex-grow-1">
                <label asp-for="Price" class="form-label">Price</label>
                <input asp-for="Price" type="number" step="0.01" class="form-control" placeholder="Enter product price">
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="flex-grow-1">
                <label asp-for="ISO" class="form-label">Currency</label>
                <select asp-for="ISO" class="form-select">
                    @foreach (var obj in isos)
                    {
                        <option value="@obj">@obj</option>
                    }
                </select>
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="CategoryId" class="form-label">Category</label>
            <select asp-for="CategoryId" class="form-select">
                @foreach(var obj in categories)
                {
                    <option value="@obj.ProductCategoryId">@obj.Name</option>
                }
            </select>
        </div>

        <div class="mb-3">
            <label asp-for="Stock" class="form-label">Stock</label>
            <input asp-for="Stock" type="number" step="0.01" class="form-control" placeholder="Enter stock amount">
            <span asp-validation-for="Stock" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label">Description</label>
            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter product description"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Add Product</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
